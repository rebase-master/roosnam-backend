<div class="container-fluid ra-topbar">
  <div class="ra-brand">
    <%= link_to dashboard_path, class: "ra-brand__title" do %>
      <span><%= _get_plugin_name[0] || 'Roosnam' %></span>
      <small><%= _get_plugin_name[1] || 'Admin' %></small>
    <% end %>
    <span class="badge badge-muted ra-env-badge">
      <%= Rails.env.capitalize %>
    </span>
  </div>

  <div class="ra-topbar__actions">
    <%= link_to Rails.configuration.x.frontend_base_url, class: "btn btn-secondary btn-sm", target: "_blank", rel: "noopener" do %>
      <i class="fa fa-eye"></i>
      <span>View Site</span>
    <% end %>

    <% if _current_user %>
      <span class="ra-topbar__user">
        <i class="fa fa-circle-user"></i>
        <%= _current_user.display_name.presence || _current_user.email %>
      </span>
    <% end %>

    <% if defined?(Devise) %>
      <%= link_to(main_app.destroy_user_session_path, method: Devise.sign_out_via, class: "btn btn-primary btn-sm") do %>
        <i class="fa fa-arrow-right-from-bracket"></i>
        <span><%= t('admin.logout') %></span>
      <% end %>
    <% end %>
  </div>
</div>

